doctype html
html
  head
    meta charset="utf-8"
    meta name="ROBOTS" content="NOODP"
    title = title
    link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Lato:300italic,400italic' rel='stylesheet' type='text/css'
    = stylesheet_link_tag :application, media: 'all'
    link rel="icon" type="image/png" href="#{image_path 'favicon-32x32.png'}" sizes="32x32"
    link rel="icon" type="image/png" href="#{image_path 'favicon-16x16.png'}" sizes="16x16"
    = auto_discovery_link_tag :atom, feed_path
    = auto_discovery_link_tag :rss, feed_path(format: :rss)
    = csrf_meta_tags
  body
    header
      = link_to root_path
        h1.title
          span.title-first-word git
          span.title-last-word casts

      span.inspirational-sentence Providing you your daily dosage of git

    .container
      = render 'flashes'

      = yield

    footer
      p.credits
        | Brought to you by&nbsp;
        = link_to "Lu√≠s Zamith", "http://blog.zamith.pt/"

    = render 'javascript'
